{
  "componentConfig": {
    "id": "componentConfig",
    "type": "object",
    "properties": {
      "containerSelector": {
        "$ref": "nonEmptyString"
      }
    }
  },
  "htmlResource": {
    "id": "htmlResource",
    "oneOf": [
      {
        "$ref": "htmlResourceText"
      },
      {
        "$ref": "htmlResourceSrc"
      }
    ]
  },
  "htmlResourceSrc": {
    "id": "htmlResourceSrc",
    "type": "object",
    "properties": {
      "src": {
        "type": "string"
      }
    },
    "required": [
      "src"
    ]
  },
  "htmlResourceText": {
    "id": "htmlResourceText",
    "type": "object",
    "properties": {
      "text": {
        "type": "string"
      }
    },
    "required": [
      "text"
    ]
  },
  "nonEmptyString": {
    "id": "nonEmptyString",
    "type": "string",
    "pattern": "^(?!\\s*$).+"
  },
  "document": {
    "id": "document",
    "type": "object",
    "properties": {
      "title": {
        "$ref": "nonEmptyString"
      },
      "headStyles": {
        "type": "array",
        "items": {
          "$ref": "style"
        }
      },
      "headScripts": {
        "type": "array",
        "items": {
          "$ref": "script"
        }
      },
      "scripts": {
        "type": "array",
        "items": {
          "$ref": "script"
        }
      }
    },
    "required": [
      "title"
    ]
  },
  "script": {
    "id": "script",
    "$ref": "htmlResource"
  },
  "style": {
    "id": "style",
    "$ref": "htmlResource"
  }
}