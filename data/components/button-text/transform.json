{
  "button": [
    { "addClasses": [ "button", "button--text" ] },
    { "addClasses": { "$value": "buttonClasses" } },
    {
      "$if": [
        { "$value": "isDisabled" },
        { "addClass": "button--disabled" }
      ]
    },
    { "attr": [ "data-action", { "$value": "action" } ] }
  ]
}
