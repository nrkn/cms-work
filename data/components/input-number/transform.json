{
  "label": [
    { "attr": [ "title", { "$value": "title" } ] }
  ],
  "input": [
    { "attr": [ "name", { "$value": "name" } ] },
    {
      "$if": [
        { "$value": "value" },
        { "attr": [ "value", { "$value": "value" } ] }
      ]
    },
    {
      "$if": [
        { "$value": "placeholder" },
        { "attr": [ "placeholder", { "$value": "placeholder" } ] }
      ]
    },
    {
      "$if": [
        { "$value": "isRequired" },
        { "attr": [ "required", "" ] }
      ]
    },
    {
      "$if": [
        { "$value": "min" },
        { "attr": [ "min", { "$value": "min" } ] }
      ]
    },
    {
      "$if": [
        { "$value": "max" },
        { "attr": [ "max", { "$value": "max" } ] }
      ]
    },
    {
      "$if": [
        { "$value": "step" },
        { "attr": [ "step", { "$value": "step" } ] }
      ]
    }
  ]
}